generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// YOUR DOMAIN MODELS GO HERE
// ============================================

// Placeholder model - delete or modify as needed
// Prisma requires at least one model to generate the client
model Example {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

