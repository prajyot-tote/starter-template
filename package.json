{
  "name": "starter-template",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "tsc && node dist/server/index.js",
    "start": "node dist/server/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "arch:validate": "dependency-cruiser src --config .dependency-cruiser.js",
    "arch:visualize": "dependency-cruiser src --config .dependency-cruiser.js --output-type dot | dot -T svg > architecture.svg",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "openapi:generate": "tsx src/server/api/openapi/generate.ts",
    "client:generate": "openapi-typescript ./openapi.json -o ./src/client/api/types.generated.ts",
    "api:generate": "npm run openapi:generate && npm run client:generate",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "validate": "npm run typecheck && npm run lint && npm run arch:validate && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "fastify": "^4.28.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "openapi-typescript": "^7.0.0",
    "prettier": "^3.3.0",
    "prisma": "^5.22.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
